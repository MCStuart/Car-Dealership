@using CarDealership;

<h1>Your Car List</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no cars in your car list!</p>
}
@if(Model.Count != 0)
{
  @foreach (Car car in Model)
  {
    <li>@car.GetMakeModel()
    <br>$@car.GetPrice()
    <br>@car.GetMiles() miles</li>
  }
}

</ul>
<a href="/cars/new">Add a new car</a>
